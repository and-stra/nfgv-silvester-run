<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StopwatchApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#4D6E4F</item>
        <item name="colorPrimaryVariant">#8DA955</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#BDD9EE</item>
        <item name="colorSecondaryVariant">#5BA8BC</item>
        <item name="colorOnSecondary">#4D6E4F</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/Theme.StopwatchApp.AppBarOverlay</item>
    </style>

    <style name="Theme.StopwatchApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.StopwatchApp" parent="Base.Theme.StopwatchApp" />
</resources>